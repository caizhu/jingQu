/**index.wxss**/
.peopleHeader{
  width: 100%;
  font-size: 14px;
  color:#fff;
  padding: 10% 20px 10% 20px;
  display: -webkit-flex;
  display: flex;
  overflow: hidden;
  background: -webkit-linear-gradient(#ff8a00, #ffa200); /* Safari 5.1 - 6.0 */ 
  background: -o-linear-gradient(#ff8a00, #ffa200); /* Opera 11.1 - 12.0 */ 
  background: -moz-linear-gradient(#ff8a00, #ffa200); /* Firefox 3.6 - 15 */
  background: linear-gradient(#ff8a00, #ffa200); /* 标准的语法 */
}
.peopleHeader .peopleImg{
  width: 120px;
  height: 120px;
  border-radius: 50%;
  display: block;
  overflow: hidden;
  border:4px solid #fff;
}
.headerBox{
  flex:1 1 auto;
  padding: 40px 0 0 20px;
}
.peopleHeader h3{
  color: #fff;
  line-height:30px;
  font-size: 28px;
  margin-bottom: 10px;
  text-shadow: 1px 2px 6px rgba(0, 0, 0, 0.3);
}
button.editPenBtn{
  width: 120px !important;
 padding: 5px 13px;
 margin: 25px 0 0 0 !important;
 background: #ffb100;
 color: #ffebc9;
 font-weight: normal;
 font-size: 12px;
 display: -webkit-flex;
 display: flex;
 border-radius: 30px;
}
.funList{
  padding: 20px 20px;
  width: 100%;
  box-sizing: border-box;
  -moz-box-sizing: border-box;
  /* Firefox */
  -webkit-box-sizing: border-box;
  /* Safari */
}
.funList li{
  width: 100%;
  font-size: 18px;
  line-height:20px;
  border-radius: 6px;
  background:#fff;
  box-shadow: 0 0 10px rgba(0,0,0,0.1);
  padding: 18px 18px;
  box-sizing: border-box;
  -moz-box-sizing: border-box;
  /* Firefox */
  -webkit-box-sizing: border-box;
  /* Safari */
  position: relative;
}
.funList li .listImg{
  width: 20px;
  height: 20px;
  display: block;
  float: left;
  margin-right: 15px;
}
.funList li .rightArrow{
  width: 18px;
  height: 18px;
  position: absolute;
  top: 50%;
  right: 20px;
  margin-top: -9px;
}
