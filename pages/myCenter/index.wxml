<!--index.wxml-->
<view class="container">
  <view class="peopleHeader">
    <View class="peopleImg">
      <open-data type="userAvatarUrl"></open-data>
    </View>
    <view class="headerBox">
      <h3>{{user.nickName}}</h3>
    <p>{{user.userTel}}</p>
    <button class="editPenBtn" bindtap="editUserInfoHandler">
        <image src="{{editPen}}" style="width:16px;height:16px;margin-right:6px"></image>
        编辑个人资料
      </button>
    </view>
    
  </view>
  <ul class="funList">
    <li bindtap="goToBuyList">
      <image src="{{listImg}}" class="listImg"></image>我的订单
      <image src="{{rightArrow}}" class="rightArrow"></image>
    </li>
  </ul>
</view>
