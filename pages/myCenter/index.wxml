<!--index.wxml-->
<view class="container">
  <view class="peopleHeader">
    <View class="peopleImg">
      <open-data type="userAvatarUrl"></open-data>
    </View>
    <h3>{{user.nickName}}</h3>
    <p>{{user.userTel}}</p>
  </view>
  <ul class="funList">
    <li bindtap="goToBuyList">
      <image src="{{listImg}}" class="listImg"></image>购买记录
      <image src="{{rightArrow}}" class="rightArrow"></image>
    </li>
  </ul>
</view>
