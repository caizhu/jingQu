/**index.wxss**/
.ibox{
  border-radius: 0;
  box-shadow: none;
}
.headimg{
  width: 100%;
  height: 250px;
  position: relative;
  overflow: hidden;
}
.headimg .playImg{
  width: 80px;
  height: 80px;
  position: absolute;
  left: 50%;
  top: 50%;
  margin: -30px 0 0 -30px;
  opacity:0.8;
}
.headerbox{
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
  padding-top:15px;
  padding-bottom: 20px;
}
.headerbox h3{
  font-size: 18px;
  line-height:28px;
  padding:0 80px 10px 0;
}
.headerbox h5{
  font-size: 18px;  
  position: absolute;
  top: 17px;
  right: 15px;
}
.headerbox p{
  color:#868595;
}
.shareBtn{
  position: absolute;
  bottom: 20px;
  right: 15px;
}
.addBVideo{
  padding: 20px 0;
  overflow: visible;
}
.addBVideo::after{
  content: '';
  display: block; 
  height: 0; 
  clear: both; 
}

.addList{
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  padding: 25rpx 0;
}

.add-item-two{
  margin:0 40rpx;
  margin-bottom: 33rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.add-item-three{
  margin:0 10rpx;
  margin-bottom: 41rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.upload-rect-three{
  width: 208rpx;
  height: 222rpx;
  background:'#FFFFFF';
  box-shadow: 0px 0px 10px 0px 
    rgba(95, 95, 95, 0.1);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
}

.upload-rect-two{
  width: 248rpx;
  height: 264rpx;
  background:'#FFFFFF';
  box-shadow: 0px 0px 10px 0px 
    rgba(95, 95, 95, 0.1);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
}

.add-icon{
  width: 47rpx;
  height: 47rpx;
}

.upload-text{
  font-size:20rpx;
  color: #888888;
  margin-top: 25rpx;
}

.part-bg{
  background-color: #a67900;
  color: #ffffff;
  border-radius: 18rpx;
  padding: 0 30rpx;
  display: flex;
  align-items: center;
  justify-items: center;
  margin-top: 22rpx;
  height: 37rpx;
}

.delete-icon{
  width: 38px!important;
  height: 38px!important;
  padding: 10rpx;
  background:none;
  position: absolute;
  top: 0;
  right: 0;
}

.delete-icon image{
  width: 18px;
  height: 18px;
}

.submitBox{
  width: 100%;
  padding: 30px 0;
}

.submitBox .btn{
  margin-top: 20px;
}

.myVideoSection{
  width: 100%;
  height: 240px;
}