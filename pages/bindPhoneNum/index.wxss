/**index.wxss**/
.weui-input{
  background:#fff;
  font-size: 16px;
  padding:11px 0;
  text-align: left;
  color: #202020;
}
.listBox{
  width: 100%;
  padding: 10px 20px;
  color:#aaa;
  font-size: 14px;
  line-height: 24px;
  border-bottom:1px solid #eee;
  margin-top: 10px;
  position: relative;
}
.listBox h5{
  font-size: 18px;
  color:#202020;
  font-weight: normal;
  margin-top: 10px;
}
.listBox button.btn{
  width: 80px !important;
  height: 34px !important;
  padding: 0 !important;
  line-height: 34px !important;
  font-size: 13px ;
  background: none;
  color:#3ca0d0;
  border: 1px solid #3ca0d0;
  border-radius: 30px;
  position: absolute;
  bottom: 15px;
  right: 20px;
}
.footerBtn{
  padding: 30px 30px;
  width: 100%;
}