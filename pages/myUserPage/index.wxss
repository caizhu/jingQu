/**index.wxss**/
.peopleHeader{
  width: 100%;
  color:#fff;
  overflow: hidden;
  position: relative;
  padding-top: 60px;
}
.peopleHeader::before{
  content:'';
  width: 100%;
  height: 100px;
 display: block;
  background: -webkit-linear-gradient(#ff8a00, #ffa200); /* Safari 5.1 - 6.0 */ 
  background: -o-linear-gradient(#ff8a00, #ffa200); /* Opera 11.1 - 12.0 */ 
  background: -moz-linear-gradient(#ff8a00, #ffa200); /* Firefox 3.6 - 15 */
  background: linear-gradient(#ff8a00, #ffa200); /* 标准的语法 */
  position: absolute;
  top: 0;
  left: 0;
  z-index: 0;
}
.peopleHeader .peopleImg{
  width: 120px;
  height: 120px;
  border-radius: 50%;
  display: block;
  overflow: hidden;
  border:4px solid #fff;
  position: relative;
  z-index:2;
  margin:0 auto;
}
.listBox{
  width: 100%;
  padding: 10px 20px;
  color:#aaa;
  font-size: 14px;
  line-height: 24px;
  border-bottom:1px solid #eee;
  margin-top: 10px;
}
.listBox h5{
  font-size: 18px;
  color:#202020;
  font-weight: normal;
  margin-top: 10px;
}
button.wxPhone{
  font-size: 14px;
  color: #2bb647;
  background: none;
  margin:10px 0 0 0 !important;
  font-weight: normal;
  width: 100% !important;
  text-align: left;
  display: -webkit-flex;
  display: flex;
}