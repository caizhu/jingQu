/**index.wxss**/
.headerbox{
  width: 100%;
  height:240px;
  overflow: hidden;
  position: relative;
  z-index:1;
}
.headerbox .textCon{
  width: 100%;
  position: absolute;
  bottom:48px;
  left: 0;
}
.headerbox .textCon h2,.headerbox .textCon p{
  display: block;
  overflow: hidden;
  white-space: nowrap;
  text-overflow:ellipsis;
  box-sizing: border-box;
  -moz-box-sizing: border-box;
  /* Firefox */
  -webkit-box-sizing: border-box;
  /* Safari */
  color: #fff;
  padding: 0 20px;
  font-size: 13px;
  text-shadow: 0 0 6px rgba(0, 0, 0, 0.1);
}
.headerbox .textCon h2{
  font-size: 22px;
  line-height: 34px;
}
.mainbox{
  margin-top:-20px;  
}
.adtext{
  padding:20px 15px;
  text-align: center;
}
.contentList{
  padding: 0 100px 20px 15px;
}
.contentList .btn{
  width:76px !important;
  height:76px;
  border-radius: 50%;
  font-size: 18px;
  padding:14px 19px;
  line-height: 24px;
  box-shadow: 0 0 10px rgba(255, 162, 0, 0.6);
  position: absolute;
  bottom:10px;
  right: 10px;
}
.contentList h3{
  line-height: 40px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow:ellipsis;
  font-weight: bold;
  font-size: 18px;
  margin-bottom: 6px;
}
.toUserCenter{
  position: absolute;
  top: 15px;
  right: 15px;
  z-index: 9;
  background: #fff;
  border-radius: 50px;
  box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
  border:1px solid #eee;
  padding: 7px;
  width: 30px !important;
  height: 30px;
  opacity: 0.76;
}