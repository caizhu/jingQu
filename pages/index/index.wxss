/**index.wxss**/
.headerbox{
  width: 100%;
  height:220px;
  border-bottom-left-radius: 20px;
  border-bottom-right-radius: 20px;
  overflow: hidden;
  position: relative;
  z-index:1;
}
.headerbox .textCon{
  width: 100%;
  position: absolute;
  bottom:30px;
  left: 0;
}
.headerbox .textCon h2,.headerbox .textCon p{
  display: block;
  overflow: hidden;
  white-space: nowrap;
  text-overflow:ellipsis;
  box-sizing: border-box;
  -moz-box-sizing: border-box;
  /* Firefox */
  -webkit-box-sizing: border-box;
  /* Safari */
  color: #fff;
  padding: 0 20px;
  font-size: 13px;
  text-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}
.headerbox .textCon h2{
  font-size: 20px;
  line-height: 34px;
}
.mainbox{
  margin-top:-20px;  
}
.adtext{
  padding: 15px;
  text-align: center;
}
.contentList{
  padding: 5px 80px 15px 15px;
}
.contentList .btn{
  width: 66px !important;
  height: 66px;
  border-radius: 50%;
  font-size: 13px;
  padding:12px;
  border:4px solid #fff;
  position: absolute;
  bottom:30px;
  right: 10px;
}
.contentList h3{
  line-height: 34px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow:ellipsis;
}