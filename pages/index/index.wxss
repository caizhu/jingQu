/**index.wxss**/
.headerbox{
  width: 100%;
  height:270px;
  border-bottom-left-radius: 30px;
  border-bottom-right-radius: 30px;
  overflow: hidden;
  position: relative;
  z-index:1;
}
.headerbox .textCon{
  width: 100%;
  position: absolute;
  bottom:48px;
  left: 0;
}
.headerbox .textCon h2,.headerbox .textCon p{
  display: block;
  overflow: hidden;
  white-space: nowrap;
  text-overflow:ellipsis;
  box-sizing: border-box;
  -moz-box-sizing: border-box;
  /* Firefox */
  -webkit-box-sizing: border-box;
  /* Safari */
  color: #fff;
  padding: 0 20px;
  font-size: 13px;
  text-shadow: 0 0 6px rgba(0, 0, 0, 0.1);
}
.headerbox .textCon h2{
  font-size: 22px;
  line-height: 34px;
}
.mainbox{
  margin-top:-40px;  
}
.adtext{
  padding:20px 15px;
  text-align: center;
}
.contentList{
  padding: 5px 90px 15px 15px;
}
.contentList .btn{
  width: 80px !important;
  height:80px;
  border-radius: 50%;
  font-size: 18px;
  padding:12px 16px;
  line-height: 24px;
  border:4px solid #fff;
  position: absolute;
  bottom:25px;
  right: 5px;
}
.contentList h3{
  line-height: 40px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow:ellipsis;
  font-weight: bold;
}
.toUserCenter{
  position: absolute;
  top: 15px;
  right: 15px;
  z-index: 9;
  background: #fff;
  border-radius: 50px;
  box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
  border:1px solid #eee;
  padding: 7px;
  width: 30px !important;
  height: 30px;
  opacity: 0.76;
}